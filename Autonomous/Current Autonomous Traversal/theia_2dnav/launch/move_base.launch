<launch>

  <!-- Start gmapping -->
    <node  pkg="gmapping" name="slam_gmapping" type="slam_gmapping" output="screen" />

  <!-- Start navigation -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam command="load" file="../params/costmap_common_params_p3dx.yaml" ns="global_costmap" />
        <rosparam command="load" file="../params/costmap_common_params_p3dx.yaml" ns="local_costmap" />
        <rosparam command="load" file="../params/local_costmap_params.yaml" />
        <rosparam command="load" file="../params/global_costmap_params.yaml" />
        <rosparam command="load" file="../params/base_local_planner_params.yaml" />
    </node>
</launch>
