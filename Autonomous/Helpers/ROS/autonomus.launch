<launch>
    <arg name="marker_size" default="19.6" />
    <arg name="max_new_marker_error" default="0.08" />
    <arg name="max_track_error" default="0.2" />

    <arg name="cam_id" default="5" />
    <arg name="ip" default="192.168.0.10" />
    <arg name="display" default="false" />
    <arg name="usb_cam" default="false" />

    <node name="right_middle_encoder" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyUSB0" />
        <param name="baud" value="9600" />
    </node>
    <node name="left_middle_encoder" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyUSB1" />
        <param name="baud" value="9600" />
    </node>
    <node name="right_back_encoder" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyUSB2" />
        <param name="baud" value="9600" />
    </node>
    <node name="left_back_encoder" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyUSB3" />
        <param name="baud" value="9600" />
    </node>
    <node name="bno" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyUSB4" />
        <param name="baud" value="9600" />
    </node>
    <node name="mega" pkg="rosserial_python" type="serial_node.py" output="screen">
        <param name="port" value="/dev/ttyACMO" />
        <param name="baud" value="9600" />
    </node>
    <group if="$(arg usb_cam)">
        <arg name="cam_image_topic" default="/usb_cam/image_raw" />
        <arg name="cam_info_topic" default="/usb_cam/camera_info" />
        <arg name="output_frame" default="usb_cam" />
        <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen">
            <param name="video_device" value="/dev/video$(arg cam_id)" />
            <param name="image_width" value="640" />
            <param name="image_height" value="480" />
            <param name="pixel_format" value="yuyv" />
            <param name="camera_frame_id" value="usb_cam" />
            <param name="io_method" value="mmap" />
        </node>
    </group>
    <group unless="$(arg usb_cam)">
        <arg name="cam_image_topic" default="/ip_cam/image_raw" />
        <arg name="cam_info_topic" default="/ip_cam/camera_info" />
        <arg name="output_frame" default="ip_cam" />
        <node pkg="ipcamera_driver" type="ipcamera_driver" name="ipcam" output="screen">
            <param name="video_url" type="string"
                value="rtsp://$(arg ip):554/user=admin_password=tlJwpbo6_channel=1_stream=0.sdp" />
            <param name="camera_info_url" type="string" value="package://ipcamera_driver/launch/parameters.yaml" />
            <param name="frame_id" type="string" value="ip_cam" />
            <remap from="camera/image" to="ip_cam/image_raw" />
        </node>
    </group>
    </group>
    <node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkersNoKinect" respawn="false" output="screen">
        <param name="marker_size" type="double" value="$(arg marker_size)" />
        <param name="max_new_marker_error" type="double" value="$(arg max_new_marker_error)" />
        <param name="max_track_error" type="double" value="$(arg max_track_error)" />
        <param name="output_frame" type="string" value="$(arg output_frame)" />

        <remap from="camera_image" to="$(arg cam_image_topic)" />
        <remap from="camera_info" to="$(arg cam_info_topic)" />
    </node>
    <group if="$(arg display)">
        <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
            <remap from="image" to="$(arg cam_image_topic)" />
            <param name="autosize" value="true" />
        </node>
    </group>
</launch>